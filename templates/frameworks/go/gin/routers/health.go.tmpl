package routers

import (
	"net/http"

	"github.com/gin-gonic/gin"
)

// HealthRouter 健康检查路由组
type HealthRouter struct{}

// InitHealthRoutes 初始化健康检查路由
func (h *HealthRouter) InitHealthRoutes(rg *gin.RouterGroup) {
	healthGroup := rg.Group("/health")
	{
		healthGroup.GET("", h.HealthCheck)
	}
}

// HealthCheck 健康检查处理器
func (h *HealthRouter) HealthCheck(c *gin.Context) {
	c.JSON(http.StatusOK, gin.H{
		"status":  "ok",
		"message": "Service is healthy",
	})
}
